---
// Define the array of projects directly in the frontmatter script.


const otherprojects = [
  {
    url: "#_",
    title: "SUPERB",
    description:
      "AI-native onchain agent for crypto research and allocation. Built to stay lean, transparent, and fast with a clean dashboard for holders.",
  },
  {
    url: "#_",
    title: "Nimbus UI",
    description:
      "A small UI kit of practical components and layouts, designed for quick shipping with Astro and Tailwind, with ready-to-use patterns.",
  },
  {
    url: "#_",
    title: "Beacon Board",
    description:
      "A lightweight status board for indie teams. Tasks, notes, and tiny automations to keep scopes clear without adding heavy process.",
  },
  {
    url: "#_",
    title: "Glyph Kit",
    description:
      "A set of crisp SVG icons and doodles for dashboards and docs â€” curated to keep interfaces clean and readable across breakpoints.",
  },
];



// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
  return 1500 + index * 500; // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-32">
    <div class="space-y-2">
      <!-- Section Title and Decorative Elements -->
      <div
        class="h-0.5 bg-secondary"
        data-aos="fade-up"
        data-aos-duration="1000"
      >
      </div>
      <h3
        class="text-secondary text-base font-medium"
        data-aos="fade-up"
        data-aos-duration="1500"
      >
        <span>Main</span>
        <span class="font-bold">projects</span>
      </h3>
    </div>

    <ul
      class="mx-auto grid grid-cols-1 sm:grid-cols-2 text-secondary lg:grid-cols-4 items-start gap-6 mt-32"
      role="list"
    >
      {
        otherprojects.map((project, index) => (
          <li
            class="flow-root h-full "
            data-aos="fade-up"
            data-aos-duration={calculateAosDuration(index)}
          >
            <a href={project.url}>
              <div class="h-full flex flex-col justify-between">
                <div>
                  <p class="group-hover:text-secondary/70 text-secondary text-9xl font-black lg:rotate-90 xl:-translate-x-32 lg:-translate-x-20 lg:mb-8 xl:mb-0  lg:pb-8">
                    0{index + 1}.
                  </p>
                  <p class="italic shrink-0">{project.title}</p>
                  <p class="text-xl  mt-3 indent-9">{project.description}</p>
                </div>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
  </div>
</section>
