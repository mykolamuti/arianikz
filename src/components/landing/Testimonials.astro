---


const testimonials = [
  {
    name: "Muti",
    role: "Engineer",
    opinion:
      "Arian ships fast and keeps scopes sane. He turns vague ideas into clean, working products, and his taste for simple UI saves time on every release.",
  },
  {
    name: "Helena",
    role: "Product",
    opinion:
      "Small, focused, and reliable — that's Arian’s approach. He documents decisions, communicates clearly, and hits deadlines without drama.",
  },
  {
    name: "Lars",
    role: "Builder",
    opinion:
      "Arian is practical and detail-minded. He keeps the stack lightweight, avoids over‑engineering, and delivers what was promised, on time.",
  },
];


// Function to calculate `data-aos-duration` based on index
function calculateAosDuration(index) {
  return 1500 + index * 500; // Example: Increment duration by 500ms for each project
}
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto py-6">
    <div class="mt-6 space-y-2">
      <div class="h-0.5 bg-secondary"></div>
      <h3 class="text-secondary text-base font-medium">
        <span>human</span>
        <span class="font-bold">opinions</span>
      </h3>
    </div>
    <div class="flex flex-col text-secondary pt-2 mt-2 gap-12 lg:gap-32">
      {
        testimonials.map((opinion, index) => (
          <div
            data-aos="fade-up"
            data-aos-duration={calculateAosDuration(index)}
            class="grid grid-cols-1 lg:items-end lg:grid-cols-4 py-4 gap-4"
          >
            <p class="text-3xl  lg:col-span-3 lg:text-5xl  indent-32 lg:indent-32">
              {opinion.opinion}
            </p>
            <p class="italic text-xs block ">
              {opinion.name} {opinion.role}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>
