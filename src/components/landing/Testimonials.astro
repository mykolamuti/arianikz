---
const testimonials = [
  { name: "Helena P.", role: "PM", opinion: "Clear comms, quick delivery, tidy code." },
  { name: "M. Rai", role: "Engineer", opinion: "Small PRs, predictable changes, easy to integrate." },
  { name: "Client Team", role: "Startup", opinion: "Launched fast and iterated safely." }
];
---

<section class="bg-primary">
  <div class="px-8 2xl:max-w-7xl mx-auto pt-12 pb-12 text-secondary">
    <h2 class="text-sm" data-aos="fade-up" data-aos-duration="2000">What people say</h2>
    <ul class="grid grid-cols-1 lg:grid-cols-3 gap-6 mt-4">
      {testimonials.map((t, i) => (
        <li class="border border-secondary p-4" data-aos="fade-up" data-aos-duration={1500 + i * 200}>
          <p class="text-lg leading-relaxed">{t.opinion}</p>
          <p class="mt-3 text-xs font-semibold">{t.name}</p>
          <p class="text-xs">{t.role}</p>
        </li>
      ))}
    </ul>
  </div>
</section>